    parser.add_argument("-d", "--deposit", dest="newCustomer", help="Deposit funds to account")
    parser.add_argument("-w", "--withdraw", dest="withdraw", help="Withdraw funds from account")
    parser.add_argument("-t", "--transfer", dest="transfer", help="Transfer funds from one account to another")
    parser.add_argument("-l", "--log", dest="log", help="Gets customer log")

